<?xml version='1.0' encoding='utf-8'?>
<widget id="eu.ryuu.screeps" version="0.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Screeps</name>
    <description>
        Mobile client for Screeps.
    </description>
    <author email="keeshii@ptcg.eu" href="http://ryuu.eu">
        keeshii
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="android-fitsSystemWindows" value="true" />
    <platform name="android">
        <allow-intent href="market:*" />
        <edit-config file="AndroidManifest.xml" mode="merge" target="/manifest/application">
            <!-- debuggable=true makes cordova ignore SSL errors and the app is connecting
            to private servers, which often uses self-signed SSL certificates. -->
            <application android:usesCleartextTraffic="true" android:debuggable="true" />
        </edit-config>
        <resource-file src="resources/android/res/values/ic_launcher_background.xml" target="/app/src/main/res/values/ic_launcher_background.xml" />
        <icon background="@color/ic_launcher_background" density="mdpi"
              foreground="resources/android/res/mipmap-mdpi/ic_launcher_foreground.png"
              src="resources/android/res/mipmap-mdpi/ic_launcher.png" />
        <icon background="@color/ic_launcher_background" density="hdpi"
              foreground="resources/android/res/mipmap-hdpi/ic_launcher_foreground.png"
              src="resources/android/res/mipmap-hdpi/ic_launcher.png" />
        <icon background="@color/ic_launcher_background" density="xhdpi"
              foreground="resources/android/res/mipmap-xhdpi/ic_launcher_foreground.png"
              src="resources/android/res/mipmap-xhdpi/ic_launcher.png" />
        <icon background="@color/ic_launcher_background" density="xxhdpi"
              foreground="resources/android/res/mipmap-xxhdpi/ic_launcher_foreground.png"
              src="resources/android/res/mipmap-xxhdpi/ic_launcher.png" />
        <icon background="@color/ic_launcher_background" density="xxxhdpi"
              foreground="resources/android/res/mipmap-xxxhdpi/ic_launcher_foreground.png"
              src="resources/android/res/mipmap-xxxhdpi/ic_launcher.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-statusbar" spec="^2.4.2" />
</widget>
